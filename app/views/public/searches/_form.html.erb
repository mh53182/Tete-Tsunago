<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= f.text_field :keyword, placeholder: "キーワードで検索" %>
  <%= f.hidden_field :model, value: "post" %>
  <%= f.select :category, Post.categories.keys.map { |k| [I18n.t("enums.post.category.#{k}"), k] }, include_blank: true %>
  <%= f.submit "検索" %>
<% end %>

