<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= f.label :model, '検索対象:' %>
  <%= f.select :model, options_for_select({'ユーザー': 'user', '投稿': 'post'}, selected: params[:model]) %>

  <%= f.label :keyword, 'キーワード:' %>
  <%= f.text_field :keyword, value: params[:keyword] %>

  <%= f.label :category, 'カテゴリ:' %>
  <%= f.select :category, options_for_select(Post.categories.keys.map { |k| [I18n.t("enums.post.category.#{k}"), k] }, selected: params[:category]), include_blank: "投稿はカテゴリでも検索できます" %>

  <%= f.submit '検索' %>
<% end %>
