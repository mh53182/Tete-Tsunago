<%= form_with url: search_path, method: :get, local: true do |f| %>

  <div class="form-group">
    <%= f.label :model, '検索対象:' %>
    <%= f.select :model, options_for_select({'ユーザー': 'user', '投稿': 'post'},
                         selected: params[:model]) %>
  </div>

  <div class="form-group">
    <%= f.label :keyword, 'キーワード:' %>
    <%= f.text_field :keyword, value: params[:keyword] %>
  </div>

  <div class="form-group">
    <%= f.label :category, 'カテゴリ:' %>
    <%= f.select :category, options_for_select(Post.categories.keys.map { |k| [I18n.t("enums.post.category.#{k}"), k] },
                            selected: params[:category]), include_blank: "投稿検索に追加できます" %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "検索", class: "btn btn-info btn-sm" %>
  </div>
<% end %>