<% post.comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to (comment.user) do %>
        <%= image_tag comment.user.get_profile_image, size:"50x50" %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= comment.body %>
    </td>
    <% if comment.user == current_user %>
      <td>
        <%= link_to "削除", post_comment_path(post.id, comment.id), method: :delete, class: "btn btn-danger", remote: true, 'data-confirm' => "本当に削除しますか？" %>
      </td>
    <% end %>
  </tr>
<% end %>