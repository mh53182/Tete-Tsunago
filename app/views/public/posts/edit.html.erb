<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto mt-5 d-flex align-items-center flex-column">
      <h3>投稿内容編集</h3>

      <%= form_with model: @post do |f| %>
        <%= render 'layouts/errors', obj: f.object %>
        
        <div class="form-group mt-5">
          <%= f.label :body, "本文" %>
          <%= f.text_area :body %>
        </div>
        
        <div class="form-group mt-5">
          <%= f.label :post_image, "画像" %>
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>
        
        <div class="form-group mt-5">
          <%= f.label :category, "カテゴリ" %>
          <%= f.select :category,
                      Post.categories.keys.map { |k| [I18n.t("enums.post.category.#{k}"), k] },
                      { selected: "everyday" } %>
        </div>
        
        <div class="form-group mt-5">
          <%= f.label :child_id, "お子様" %>
          <%= f.collection_select :child_id, 
                                 current_user.children, :id, :nickname, include_blank: "選択してください" %>
        </div>
        
        <div class="form-group mt-5">
          <%= f.submit "更新する", class: "btn btn-info" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>