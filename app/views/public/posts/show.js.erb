<!--モーダルを取得-->
var modal = document.getElementById('modal');
<!--マスクを取得-->
var mask = document.getElementById('mask');

<!--モーダルの中身をshowビューに置き換える-->
modal.innerHTML = '<%= escape_javascript(render 'public/posts/show', post: @post, comments: @comments, user: @user, comment: @comment ) %>';

<!--CSSのモーダルhiddenクラスを削除してモーダルとマスクを表示-->
modal.classList.remove('hidden');
mask.classList.remove('hidden');

<!--モーダルの外側クリックでhiddenクラスを追加しモーダルとマスクを非表示-->
mask.addEventListener('click', () => {
  modal.classList.add('hidden');
  mask.classList.add('hidden');
  });