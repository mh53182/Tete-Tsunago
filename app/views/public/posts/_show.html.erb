<div class="container-fluid">
  <div class="row">
    <div class="col-md-11 mx-auto py-2">
      <div class="row">
        <div class="col-6">
          <%= image_tag post.get_post_image, size: '400x400' %>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-8">
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image %><%= user.name %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= post.body %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <%= post.created_at.strftime('%Y/%m/%d') %>
            </div>
            <div class="col-md-3">
              <p>カテゴリ：<%= post.category_i18n %></p>
            </div>
            <div class="col-md-3">
              <p>お子様：<%= post.child.nickname %></p>
            </div>
            <div class="col-md-3">
              <p>いいね：</p>
              <span id="favorite_buttons_<%= post.id %>">
                <%= render "public/favorites/favorite", post: @post %>
              </span>
            </div>
          </div>
          <div class="row">
            <div class="col-md-11">
              <p>コメント:</p>
              <div id="post-comments">
                <%= render "public/comments/comments", post: @post %>
              </div>
              <div id="comment-form">
                <%= render "public/comments/form", post: @post, comment: @comment %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>