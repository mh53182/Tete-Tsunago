<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model: @user, local:true do |f| %>
        <%= render 'layouts/errors', obj: f.object %>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, placeholder: "ここに自己紹介を入力できます", rows: 5, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, placeholder: "メールアドレスを入力してください", class: "form-control email" %>
        </div>
        <div class="checkbox">
          <%= f.radio_button :is_public, true %>
          <%= f.label :is_public_true, "公開" %>

          <%= f.radio_button :is_public, false %>
          <%= f.label :is_public_false, "非公開" %>
        </div>

        <div class="form-group">
          <%= f.submit "保存", class: 'btn btn-secondary' %>
        </div>
      <% end %>
      <%= link_to "退会する", confirm_user_path(@user), class: 'btn btn-danger' %>
    </div>
  </div>
</div>
