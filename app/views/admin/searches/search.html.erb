<div class="container-fluid mt-3">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <% if @model == 'user' %>
        <h3 class="text-center">"<%= @keyword %>" のユーザー検索結果</h3>
        <%= render 'admin/users/index', users: @records %>

      <% elsif @model == 'comment' %>
        <h3 class="text-center">"<%= @keyword %>" のコメント検索結果</h3>
        <%= render 'admin/comments/index', comments: @records %>

      <% elsif %>
        <h3 class="text-center">"<%= @keyword %>" の投稿検索結果</h3>
        <%= render 'admin/posts/index', posts: @records %>
      <% end %>
    </div>
  </div>
</div>