<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
      <div class="row justify-content-center">
        <h3><%= @user.name %>さんの詳細ページ</h3>
      </div>
      <div class="row mt-4 justify-content-center">
        <div class="col-md-2">
          <div class="row justify-content-center">
            <%= image_tag @user.get_profile_image, :size =>'70x70' %>
          </div>
          <div class="row mt-2">
            <%= link_to "ユーザー編集", edit_admin_user_path(@user), class: "btn btn-outline-secondary btn-block" %>
          </div>
        </div>
        <div class="col-md-4 ml-3">
          <h5>自己紹介：</h5>
          <p><%= @user.introduction %></p>
        </div>
        <div class="col-md-3 ml-2">
          <h5>お子様:</h5>
          <% if @user.children.any? %>
            <ul>
              <% @user.children.each do |child| %>
                <li>
                  ・<%= child.nickname %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>登録されていません</p>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= render 'admin/posts/index', posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>