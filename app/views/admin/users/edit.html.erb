<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model:@user, url: admin_user_path, local:true do |f| %>
        <%#= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <p>プロフィール画像</p>
          <%= image_tag @user.get_profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, placeholder: "自己紹介文", rows: 5, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, placeholder: "メールアドレスは空欄にできません", class: "form-control email" %>
        </div>
        <div>
          <span>公開ステータス</span>
          <% if @user.is_public == true %>
            <span class="text-success">公開</span>
          <% else %>
            <span class="text-danger">非公開</span>
          <% end %>
        </div>
        <div class="checkbox">
          <span>会員ステータス</span>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active_true, "有効" %>

          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active_false, "退会" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
