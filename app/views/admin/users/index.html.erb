<div class='container-fluid mt-3'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 px-5 px-sm-0 mx-auto">
      <h2>てて つなご　管理メニュー ： ユーザー一覧</h2>

      <% @users.each do |user| %>

        <table>
          <tr>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
            <th>公開ステータス</th>
            <th></th>
          </tr>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_active == true %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-danger">退会</span>
              <% end %>
            </td>
            <td>
              <% if user.is_public == true %>
                <span class="text-success">公開</span>
              <% else %>
                <span class="text-danger">非公開</span>
              <% end %>
            </td>
            <td><%= link_to "詳細", admin_user_path(user) %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
