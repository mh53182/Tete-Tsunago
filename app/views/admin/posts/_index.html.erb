<!--モーダルウィンドウ用-->
<div id="mask" class="hidden"></div>
<div id="modal" class="hidden"></div>

<% if posts.exists? %>
  <div class="row row-cols-md-2 justify-content-center mt-3">
    <% posts.each do |post| %>
      <div class="col mb-4 d-flex justify-content-center">
        <div class="card my-3 shadow" style="width: 500px;">
          <div class="row g-0">
            <div class="col-md-4">
              <%= link_to admin_post_path(post.id), remote: true do %>
                <%= image_tag post.get_post_image, class: "img-fluid rounded-start" %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to admin_user_path(post.user) do%>
                    <%= image_tag post.user.get_profile_image, size: "40x40", class: "rounded-circle"; %>
                    <%= post.user.name %>
                  <% end %>
                </h5>
                <p class="card-text"><%= post.body.truncate(100) %></p>
              </div>
            </div>
          </div>
          <p class="card-text">
            <small class="text-body-secondary">
              <table class="table table-borderless px-1">
                <tr>
                  <td>投稿日：'<%= post.created_at.strftime('%y/%m/%d') %></td>
                  <td>カテゴリ：<%= post.category_i18n %></td>
                  <td>
                    <% if post.child.present? %>
                      お子様：<%= post.child.nickname %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>いいね（<%= post.favorites.count %>）</td>
                  <td>
                    <%= link_to admin_post_path(post.id), remote: true do %>
                      コメント（<%= post.comments.count %>）
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "削除", admin_post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" %>
                  </td>
                </tr>
              </table>
            </small>
          </p>
        </div>
      </div>
    <% end %>
    <%= paginate posts %>
  </div>
<% else %>
  <div class="row mt-3">
    <h5 class="text-center mt-5">投稿はありません</h5>
  </div>
<% end %>