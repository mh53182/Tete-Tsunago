<table class="table table-striped table-borderless">
  <% post.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to admin_user_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image, size: "30x30", class: "rounded-circle"; %>
        <% end %>
      </td>
      <td class="comment-nowrap">
        <%= link_to admin_user_path(comment.user) do %>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td style="word-break: break-word">
        <%= comment.body %>
      </td>
      <td class="comment-nowrap">
        <%= link_to "削除", destroy_modal_admin_comment_path(comment.id), method: :delete,
            class: "btn btn-danger btn-sm", remote: true, "data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
  <% end %>
</table>