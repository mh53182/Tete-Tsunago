      <% @comments.each do |comment| %>

        <table>
          <tr>
            <th>コメント</th>
            <th>ユーザー</th>
            <th>コメント元の投稿</th>
            <th></th>
          </tr>
          <tr>
            <td>
              <%= coment.body %>
            </td>
            <td>
              <%= link_to admin_user_path(comment.user) do %>
                <%= comment.user.name %>
              <% end %>
              </td>
            <td><%= comment.post.body %></td>
