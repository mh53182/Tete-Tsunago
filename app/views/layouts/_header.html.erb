<header>
  <nav class="navbar navbar-expand-lg" style="background: #ffffff;">
    <div class="container-fluid">
      <a class="navbar-brand ml-5" href="/"><%= image_tag("logo.jpg", size: "220x80") %></a>
      <button class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarNavDropdown"
              aria-controls="navbarNavDropdown"
              aria-expanded="false"
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto mr-5">
        <% if user_signed_in? %>
          <li>
            <%= link_to posts_path, class: "nav-link" do %>
              <i class="fa-solid fa-handshake-angle"></i> みんなの投稿
            <% end %>
          </li>
          <li>
            <%=  link_to user_path(current_user), class: "nav-link" do %>
              <i class="fa-solid fa-circle-user"></i> マイページ
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
          <li>
            <%= link_to admin_users_path, class: "nav-link" do %>
              <i class="fas fa-users"></i> ユーザー一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_posts_path, class: "nav-link" do %>
              <i class="fa-solid fa-handshake-angle"></i> 投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_comments_path, class: "nav-link" do %>
              <i class="fa-solid fa-comment"></i> コメント一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to about_path, class: "nav-link" do %>
              <i class="fa-solid fa-circle-info"></i> ててつなご について
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "nav-link" do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
          <li>
            <%= link_to users_guest_sign_in_path, method: :post, class: "nav-link" do %>
              <i class="fas fa-sign-in-alt"></i> ゲストログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>