<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>てて つなご</span></a><!--ロゴ画像用意する-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to posts_path, class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> みんなの"つなご"
            <% end %>
          </li>
          <li>
            <%=  link_to user_path(current_user), class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> マイページ
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
          <li>
            <%= link_to"コメント一覧",admin_comments_path, class: 'nav-link' %>
          </li>
          <li>
            <%= link_to"ユーザー一覧",admin_users_path, class: 'nav-link' %>
          </li>
           <li>
            <%= link_to"ログアウト",destroy_admin_session_path,method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li>
            <%= link_to about_path, class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> ててつなご について
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path , class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
        <% if admin_signed_in? %>
          <%= render 'admin/searches/form' %>
        <% else %>
          <%= render 'public/searches/form' %>
        <% end %>
      </div>
    </div>
  </nav>
</header>