<div id="mask" class="hidden"></div>
  <div id="modal" class="hidden">
    <p>モーダルウィンドウ<p>
  </div>


<div class="row row-cols-md-2">
  <% posts.each do |post| %>
    <div class="col-md-5 mx-auto">
      <%= link_to post_path(post.id),remote: true do %>
        <div class="card mt-4 shadow-lg">
          <div class="row g-0">
            <div class="col-md-4">
              <%= image_tag post.get_post_image, size: '400x400', class: "img-fluid rounded-start" %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h6 class="card-title">
                  <%= link_to user_path(post.user) do%>
                    <%= image_tag post.user.get_profile_image, size:'80x80' %>
                    <%= post.user.name %>
                  <% end %>
                </h6>
                <p class="card-text">
                  <%= post.body %>
                </p>
                <p class="card-text">
                  <small class="text-body-secondary">
                    <%= post.created_at.strftime('%Y/%m/%d') %>　カテゴリ：<%= post.category_i18n %>
                    <% if post.child.present? %>
                      お子様：<%= post.child.nickname %>
                    <% end %>
                    <% if post.user == current_user %>
                      <%= link_to "編集", edit_post_path(post.id) %>
                      <%= link_to "削除", post_path(post.id), method: :delete, 'data-confirm' => "本当に削除しますか？" %>
                    <% end %>
                  </small>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>